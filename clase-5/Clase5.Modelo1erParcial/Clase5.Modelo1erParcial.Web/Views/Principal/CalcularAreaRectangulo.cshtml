@model Clase5.Modelo1erParcial.Logica.Rectangulo;
@{
    ViewData["Title"] = "Calcular Área de rectángulo";
}

<form action="/principal/CalcularAreaRectangulo" method="post">
    <div>
        <label>Base:</label>
        <input asp-for="@Model.Base" type="text" name="Base" id="Base" value="@Model.Base" />
        <span asp-validation-for="@Model.Base " class="text-danger"></span>
    </div>

    <div>
        <label>Altura:</label>
        <input asp-for="@Model.Altura" type="text" name="Altura" id="Altura" value="@Model.Altura" />
        <span asp-validation-for="@Model.Altura " class="text-danger"></span>
    </div>

    <input type="submit" value="Operar" />
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
